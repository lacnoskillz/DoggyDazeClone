<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}} to your profile!</h2>
     <iframe src="https://giphy.com/embed/1iTItUOuJLsbev28" width="480" height="402" frameBorder="0" class="giphy-embed"></iframe>
  </div>
</div>

<div class="row mt-4">
  {{#if Reviews.length}}
  <div class="col-md-6 review-list">
    <h3>Your Reviews:</h3>

    {{#each Reviews as |review|}}
    <div class= "card row mb-2">
      <div class="col-md-8">
        <a class="restaurants" href="/restaurant/{{review.Restaurant.id}}">
        <h3>Restaurant Name: {{review.Restaurant.restaurant_name}}</h3>
        </a>
        <h4>Rating: {{rating}}/10 ğŸ¾'s<h4>
        <p>Posted on: {{format_date date_created}}</p>
        <p>{{description}}</p>
      </div>
      <div class="col-md-4">
        {{!-- Will have an error if there arent any reviews to delete. Since it cant find any delete buttons to use.
        --}}
        <button class="btn btn-sm delete btn-danger" data-id="{{review.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <img src="./public/css/images/wow such empty.jpg" alt="its empty">
  {{/if}}
</div>

<script src="./js/profile.js"></script>