<div class="homepagecontainer">
  <h2 id="homeh2">Click on a restaurant to see how dogfriendly they are!</h2>
  {{#if logged_in}}
  <div class="restaurantdiv">
   
    <button class="btn btn-primary" id="new-restaurant" href="/new-restaurant">Add a new restaurant</button>
    
  </div>
  {{/if}}
   <div class="restaurantdiv">
    
  {{#each restaurants as |restaurant|}}
  <div class="Singlerestaurant">
  
    <h4>
      <a class="restaurants" href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a>
    </h4>
  
    <div class="card-body">
      {{#if averageRating}}
      <p>Average rating: {{averageRating}} 🐾</p>
      {{else}}
      <p>No reviews yet, leave your own!</p>
      {{/if}}
    </div>
    </div>
    {{/each}}
    
    </div>
</div>