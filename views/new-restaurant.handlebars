<div class="addrescontainer">
    {{#if logged_in}}
    <div class="addresheader">
        <h2 class="h2addres">Add a new Restaurant</h2>
        <p>Search for the restaurant you want to add</p>
    </div>
    <form id="addresform"class="form search-form">
        <div>
            <div class="form-group">
                <input class="form-input" type="text" id="search" />
                    <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </div>
    </form>
    <div class="AddResIframe">
        <iframe id="map-frame"
            width="90%"
            height="400px"
            style="border:0"
            loading="lazy"
            allowfullscreen
            referrerpolicy="no-referrer-when-downgrade"
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyC7zAtsP6T4gvbxxyZbASjxQjIKfdAlOcs&q=${search}+(Restaurant),San+Antonio+TX">
        </iframe>
    </div>
    <form class="confirm">
    <div class="addresconfirm">
        <h4 class="selectedh4">Selected Restaurant:</h4>
        <p id="result"></p>
        <div>
            <button class="btn btn-primary" type="submit">Add this Restaurant</button>
        </div>
    </div>
    </form>
    {{else}}
    <div>
        <p>You must <a href="/login">log in</a> to add a new restaurant</p>
    </div>
    {{/if}}
  </div>
  <script src="./js/search.js"></script>
</div>